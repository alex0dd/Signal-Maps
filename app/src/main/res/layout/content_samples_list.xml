<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="it.unibo.alexpod.lam_project_signal_maps.activities.SamplesListActivity"
    tools:showIn="@layout/activity_samples_list">

    <it.unibo.alexpod.lam_project_signal_maps.custom.RecyclerViewEmptySupport
        android:id="@+id/itemsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/listEmptyTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="@string/no_samples_list_entry_text"
        android:textAlignment="center"
        android:textSize="18dp" />

</android.support.constraint.ConstraintLayout>
